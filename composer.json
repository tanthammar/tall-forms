{
    "name": "tanthammar/tall-forms",
    "description": "A dynamic, responsive Laravel Livewire form generator with realtime validation, file uploads, array fields, and more.",
    "keywords": [
        "tailwind",
        "alpinejs",
        "livewire",
        "forms",
        "laravel"
    ],
    "homepage": "https://github.com/tanthammar/tall-forms",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Tina Hammar",
            "email": "post@tinahammar.se",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "livewire/livewire": "^2.10|dev-master",
        "laravel/framework": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Tanthammar\\TallForms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tanthammar\\TallForms\\Tests\\": "tests",
            "Tanthammar\\TallForms\\Tests\\Database\\Factories\\": "tests/database/factories"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tanthammar\\TallForms\\FormServiceProvider"
            ]
        }
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.2",
        "phpunit/phpunit": "^9.5.10",
        "pestphp/pest-plugin-livewire": "^1.0",
        "pestphp/pest-plugin-parallel": "^1.0"
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest coverage"
    }
}
